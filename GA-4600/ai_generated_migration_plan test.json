    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "prepare",
            "input_dataset": "demographics.csv",
            "output_dataset": "selected_demographics",
            "operations": [
                {
                    "type": "select",
                    "columns": [
                        "Customer_ID",
                        "Customer_Name",
                        "Email",
                        "Phone_Number",
                        "Address",
                        "City",
                        "State",
                        "Postal_Code",
                        "Date_of_Birth",
                        "Gender",
                        "Marital_Status",
                        "Occupation",
                        "Income_Level",
                        "Customer_Segment"
                    ]
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "prepare",
            "input_dataset": "claims.csv",
            "output_dataset": "selected_claims",
            "operations": [
                {
                    "type": "select",
                    "columns": [
                        "Claim_ID",
                        "Policy_ID",
                        "Claim_Date",
                        "Claim_Type",
                        "Claim_Status",
                        "Claim_Amount",
                        "Claim_Payout"
                    ]
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "prepare",
            "input_dataset": "policy.csv",
            "output_dataset": "selected_policy",
            "operations": [
                {
                    "type": "select",
                    "columns": [
                        "policy_id",
                        "customer_id",
                        "policy_type",
                        "policy_status",
                        "policy_start_date",
                        "policy_end_date",
                        "policy_term",
                        "policy_premium",
                        "total_premium_paid",
                        "renewal_status",
                        "policy_addons"
                    ]
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "join",
            "input_datasets": [
                "selected_demographics",
                "selected_policy"
            ],
            "output_dataset": "joined_demographics_policy",
            "join_type": "inner",
            "join_conditions": [
                {
                    "left_column": "Customer_ID",
                    "right_column": "customer_id"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "join",
            "input_datasets": [
                "joined_demographics_policy",
                "selected_claims"
            ],
            "output_dataset": "joined_all_data",
            "join_type": "inner",
            "join_conditions": [
                {
                    "left_column": "policy_id",
                    "right_column": "Policy_ID"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "group",
            "input_dataset": "joined_all_data",
            "output_dataset": "summarized_data",
            "group_by": [
                "Customer_ID"
            ],
            "aggregations": [
                {
                    "column": "Claim_ID",
                    "type": "count",
                    "alias": "Total_Claims"
                },
                {
                    "column": "policy_id",
                    "type": "count",
                    "alias": "Policy_Count"
                },
                {
                    "column": "Claim_Date",
                    "type": "max",
                    "alias": "Recent_Claim_Date"
                },
                {
                    "column": "Claim_Amount",
                    "type": "avg",
                    "alias": "Average_Claim_Amount"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "join",
            "input_datasets": [
                "summarized_data",
                "joined_all_data"
            ],
            "output_dataset": "final_joined_data",
            "join_type": "inner",
            "join_conditions": [
                {
                    "left_column": "Customer_ID",
                    "right_column": "Customer_ID"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "prepare",
            "input_dataset": "final_joined_data",
            "output_dataset": "calculated_metrics",
            "operations": [
                {
                    "type": "formula",
                    "column": "Age",
                    "formula": "DateTimeDiff(DateTimeToday(), Date_of_Birth, 'years')"
                },
                {
                    "type": "formula",
                    "column": "Claim_To_Premium_Ratio",
                    "formula": "if(total_premium_paid != 0, Claim_Amount / total_premium_paid, 0)"
                },
                {
                    "type": "formula",
                    "column": "Claims_Per_Policy",
                    "formula": "if(Policy_Count != 0, Total_Claims / Policy_Count, 0)"
                },
                {
                    "type": "constant",
                    "column": "Retention_Rate",
                    "value": 0.85
                },
                {
                    "type": "constant",
                    "column": "Cross_Sell_Opportunities",
                    "value": "Multi-Policy Discount, Home Coverage Add-on"
                },
                {
                    "type": "constant",
                    "column": "Upsell_Potential",
                    "value": "Premium Vehicle Coverage"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "prepare",
            "input_dataset": "aiml_insights.csv",
            "output_dataset": "selected_aiml_insights",
            "operations": [
                {
                    "type": "select",
                    "columns": [
                        "Customer_ID",
                        "Churn_Probability",
                        "Next_Best_Offer",
                        "Claims_Fraud_Probability",
                        "Revenue_Potential"
                    ]
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "prepare",
            "input_dataset": "scores.csv",
            "output_dataset": "selected_scores",
            "operations": [
                {
                    "type": "select",
                    "columns": [
                        "Customer_ID",
                        "Credit_Score",
                        "Fraud_Score",
                        "Customer_Risk_Score"
                    ]
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360_ANALYSIS",
            "recipe_type": "join",
            "input_datasets": [
                "calculated_metrics",
                "selected_aiml_insights",
                "selected_scores"
            ],
            "output_dataset": "customer_360_view",
            "join_type": "inner",
            "join_conditions": [
                {
                    "left_column": "Customer_ID",
                    "right_column": "Customer_ID"
                }
            ]
        }
    }
]