    {
        "step": "import_dataset",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "connection_name": "ClaimsDataConnection",
            "dataset_name": "claims.csv"
        }
    },
    {
        "step": "import_dataset",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "connection_name": "DemographicsDataConnection",
            "dataset_name": "demographics.csv"
        }
    },
    {
        "step": "import_dataset",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "connection_name": "ScoresDataConnection",
            "dataset_name": "scores.csv"
        }
    },
    {
        "step": "import_dataset",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "connection_name": "AIMLInsightsDataConnection",
            "dataset_name": "aiml_insights.csv"
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Prepare",
            "input_datasets": [
                "demographics.csv"
            ],
            "output_dataset": "selected_demographics",
            "actions": [
                {
                    "action": "Select",
                    "parameters": {
                        "columns": [
                            "Customer_ID",
                            "Customer_Name",
                            "Email",
                            "Phone_Number",
                            "Address",
                            "City",
                            "State",
                            "Postal_Code",
                            "Date_of_Birth",
                            "Gender",
                            "Marital_Status",
                            "Occupation",
                            "Income_Level",
                            "Customer_Segment"
                        ]
                    }
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Prepare",
            "input_datasets": [
                "claims.csv"
            ],
            "output_dataset": "selected_claims",
            "actions": [
                {
                    "action": "Select",
                    "parameters": {
                        "columns": [
                            "Claim_ID",
                            "Policy_ID",
                            "Claim_Date",
                            "Claim_Type",
                            "Claim_Status",
                            "Claim_Amount",
                            "Claim_Payout"
                        ]
                    }
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Prepare",
            "input_datasets": [
                "policy.csv"
            ],
            "output_dataset": "selected_policy",
            "actions": [
                {
                    "action": "Select",
                    "parameters": {
                        "columns": [
                            "policy_id",
                            "customer_id",
                            "policy_type",
                            "policy_status",
                            "policy_start_date",
                            "policy_end_date",
                            "policy_term",
                            "policy_premium",
                            "total_premium_paid",
                            "renewal_status",
                            "policy_addons"
                        ]
                    }
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Join",
            "input_datasets": [
                "selected_demographics",
                "selected_policy"
            ],
            "output_dataset": "joined_demographics_policy",
            "join_type": "Inner",
            "join_conditions": [
                {
                    "left_column": "Customer_ID",
                    "right_column": "customer_id"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Join",
            "input_datasets": [
                "joined_demographics_policy",
                "selected_claims"
            ],
            "output_dataset": "joined_all_data",
            "join_type": "Inner",
            "join_conditions": [
                {
                    "left_column": "policy_id",
                    "right_column": "Policy_ID"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Group",
            "input_datasets": [
                "joined_all_data"
            ],
            "output_dataset": "summarized_data",
            "group_by": [
                "Customer_ID"
            ],
            "aggregations": [
                {
                    "column": "Claim_ID",
                    "aggregation": "count",
                    "alias": "Total_Claims"
                },
                {
                    "column": "policy_id",
                    "aggregation": "count",
                    "alias": "Policy_Count"
                },
                {
                    "column": "Claim_Date",
                    "aggregation": "max",
                    "alias": "Recent_Claim_Date"
                },
                {
                    "column": "Claim_Amount",
                    "aggregation": "avg",
                    "alias": "Average_Claim_Amount"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Join",
            "input_datasets": [
                "summarized_data",
                "joined_all_data"
            ],
            "output_dataset": "final_joined_data",
            "join_type": "Inner",
            "join_conditions": [
                {
                    "left_column": "Customer_ID",
                    "right_column": "Customer_ID"
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Prepare",
            "input_datasets": [
                "final_joined_data"
            ],
            "output_dataset": "calculated_metrics",
            "actions": [
                {
                    "action": "Formula",
                    "parameters": {
                        "formulas": [
                            {
                                "column": "Age",
                                "formula": "DateTimeDiff(DateTimeToday(), Date_of_Birth, 'years')"
                            },
                            {
                                "column": "Claim_To_Premium_Ratio",
                                "formula": "if(total_premium_paid != 0, Claim_Amount / total_premium_paid, 0)"
                            },
                            {
                                "column": "Claims_Per_Policy",
                                "formula": "if(Policy_Count != 0, Total_Claims / Policy_Count, 0)"
                            },
                            {
                                "column": "Retention_Rate",
                                "formula": "0.85"
                            },
                            {
                                "column": "Cross_Sell_Opportunities",
                                "formula": "'Multi-Policy Discount, Home Coverage Add-on'"
                            },
                            {
                                "column": "Upsell_Potential",
                                "formula": "'Premium Vehicle Coverage'"
                            }
                        ]
                    }
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Prepare",
            "input_datasets": [
                "aiml_insights.csv"
            ],
            "output_dataset": "selected_aiml_insights",
            "actions": [
                {
                    "action": "Select",
                    "parameters": {
                        "columns": [
                            "Customer_ID",
                            "Churn_Probability",
                            "Next_Best_Offer",
                            "Claims_Fraud_Probability",
                            "Revenue_Potential"
                        ]
                    }
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Prepare",
            "input_datasets": [
                "scores.csv"
            ],
            "output_dataset": "selected_scores",
            "actions": [
                {
                    "action": "Select",
                    "parameters": {
                        "columns": [
                            "Customer_ID",
                            "Credit_Score",
                            "Fraud_Score",
                            "Customer_Risk_Score"
                        ]
                    }
                }
            ]
        }
    },
    {
        "step": "create_recipe",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "recipe_type": "Join",
            "input_datasets": [
                "calculated_metrics",
                "selected_aiml_insights",
                "selected_scores"
            ],
            "output_dataset": "customer_360_final",
            "join_type": "Inner",
            "join_conditions": [
                {
                    "left_column": "Customer_ID",
                    "right_column": "Customer_ID"
                }
            ]
        }
    },
    {
        "step": "export_dataset",
        "parameters": {
            "project_key": "CUSTOMER_360",
            "dataset_name": "customer_360_final",
            "connection_name": "Customer360OutputConnection",
            "output_path": "tfs://dataeconomy-9k42/62457/uploads/62457/Customer_360.csv"
        }
    }
]